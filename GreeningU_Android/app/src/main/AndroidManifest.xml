<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.greeningu" >

    <uses-permission android:name="android.permission.USE_CREDENTIALS" /> <!-- To retrieve the account name (email) as part of sign-in: -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" /> <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".RegistroActivity"
            android:label="@string/title_activity_registro" >
        </activity>
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_home" >
        </activity>
        <activity
            android:name=".ListaComunidadesActivity"
            android:label="@string/title_activity_lista_comunidades" >
        </activity>
        <activity
            android:name=".InformacoesComunidadeActivity"
            android:label="@string/title_activity_detalhes_comunidade" >
        </activity>
        <activity
            android:name=".DetalhesComunidadeActivity"
            android:label="Detalhes da comunidade" >
        </activity>
        <activity
            android:name=".NovaPostagemActivity"
            android:label="Nova Postagem" >
        </activity>
        <activity
            android:name=".ListaPostagensActivity"
            android:label="@string/title_activity_activity_lista_postagens" >
        </activity>
        <activity
            android:name=".DetalhesPostagemActivity"
            android:label="@string/title_activity_detalhes_postagem" >
        </activity>
        <activity
            android:name=".ComentarioActivity"
            android:label="@string/title_activity_comentario" >
        </activity>
        <activity
            android:name=".EnviarComentarioActivity"
            android:label="@string/title_activity_enviar_comentario" >
        </activity>
    </application>

</manifest>
