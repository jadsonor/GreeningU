<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.greeningu.DetalhesPostagemActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Titulo"
                android:id="@+id/txtTitulo"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textColor="#ff179625"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Descricao"
                android:id="@+id/txtDescricao"
                android:layout_below="@+id/txtTexto"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:textColor="#ff179625" />

            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:id="@+id/ivImagem"
                android:layout_below="@+id/txtDescricao"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp" />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rbVoto"
                android:layout_below="@+id/ivImagem"
                android:layout_centerHorizontal="true"
                android:numStars="5"
                android:stepSize="1"
                android:layout_marginTop="10dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/votar"
                android:id="@+id/btnVotar"
                android:layout_below="@+id/rbVoto"
                android:layout_centerHorizontal="true"
                android:textColor="#ff179625"
                android:onClick="btnVotarClick"/>




            </RelativeLayout>


        </ScrollView>



</RelativeLayout>
