<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.greeningu.RegistroActivity"
    android:id="@+id/registro">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Novo Registro"
                android:id="@+id/lblNovoRegistro"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textSize="25dp"
                android:textColor="#ff179625" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edtNome"
                android:layout_below="@+id/lblNovoRegistro"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:hint="Nome" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edtSobrenome"
                android:layout_below="@+id/edtNome"
                android:layout_centerHorizontal="true"
                android:hint="Sobrenome"
                android:layout_marginTop="20dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/edtEmail"
                android:hint="Email"
                android:layout_below="@+id/spnSexo"
                android:layout_alignLeft="@+id/edtLogin"
                android:layout_alignStart="@+id/edtLogin"
                android:layout_marginTop="10dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edtLogin"
                android:layout_below="@+id/edtEmail"
                android:layout_centerHorizontal="true"
                android:hint="Login"
                android:layout_marginTop="10dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/edtSenha"
                android:layout_below="@+id/edtLogin"
                android:layout_centerHorizontal="true"
                android:hint="Senha"
                android:layout_marginTop="10dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/edtRepSenha"
                android:layout_below="@+id/edtSenha"
                android:layout_centerHorizontal="true"
                android:hint="Repita a senha"
                android:layout_marginTop="10dp" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spnSexo"
                android:layout_below="@+id/edtSobrenome"
                android:layout_alignLeft="@+id/edtEmail"
                android:layout_alignStart="@+id/edtEmail"
                android:layout_alignRight="@+id/edtEmail"
                android:layout_alignEnd="@+id/edtEmail"
                android:layout_marginTop="10dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cadastrar"
                android:id="@+id/btnCadastrar"
                android:layout_below="@+id/edtRepSenha"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:onClick="btnCadastrarClick"
                android:textColor="#ff179625" />


            </RelativeLayout>


        </ScrollView>

</RelativeLayout>
